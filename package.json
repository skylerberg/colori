{
  "name": "colori",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "test": "vitest run",
    "bench": "vitest bench",
    "benchmark": "vitest bench",
    "build:wasm": "cd colori-wasm && wasm-pack build --target web --out-dir ../src/wasm-pkg",
    "run-games": "cargo run --release --manifest-path colori-runner/Cargo.toml --",
    "profile": "samply record cargo run --release --manifest-path colori-runner/Cargo.toml -- --games 1 --iterations 10000 --players 3 --threads 1"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "@typescript-eslint/types": "^8.56.1",
    "svelte": "^5.15.0",
    "svelte-check": "^4.1.1",
    "terser": "^5.37.0",
    "tsx": "^4.21.0",
    "typescript": "~5.6.2",
    "vite": "^6.1.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "trystero": "^0.22.0"
  }
}
